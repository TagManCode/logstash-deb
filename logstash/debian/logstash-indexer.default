#
# Default logstash-indexer service configuration
#
export JAVA_OPTS='-Xms64m -Xmx128m'

# Load the logstash config from a specific file, directory, or a wildcard. If
# given a directory or wildcard, config files will be read from the directory
# in alphabetical order.
export LOGSTASH_CONFIG='/etc/logstash/indexer.conf'

# Run COUNT filter workers (default: 1)
export FILTER_WORKERS=1
